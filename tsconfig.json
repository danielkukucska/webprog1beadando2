{
    "compilerOptions": {
        
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
                "@App/*": ["./App/*"],
                "@Test/*": ["./Test/*"],
                "@ITest/*": ["./ITest/*"],
            },
        "types": ["node"]
    },
    "include": ["src"]
}
